@model Chat.FrontWeb.Areas.Admin.Models.Member.MemberListViewModel
<div class="dataTable">
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="t1">
        <thead>
            <tr>
                <th>会员编号</th>
                <th>姓名</th>
                <th>注册日期</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody id="pagerList">
            @foreach (var user in Model.MemberList)
            {
                <tr>
                    <td align="center">
                        <a href="/Admin/Member/PersonalData?id=@user.ID">
                            @user.UserCode
                        </a>
                    </td>
                    <td align="center">@user.ID</td>
                    <td align="center">@user.CreateTime</td>
                    <td align="center">
                        <a></a>
                        @{if (user.IsLock == 1)
                            {
                                <button class="easyui-linkbutton open" value="@user.ID" iconcls="icon-remove">解冻账户</button>
                            }
                        }
                        @{if (user.IsLock == 0)
                            {
                                <button class="easyui-linkbutton close" value="@user.ID" iconcls="icon-edit">冻结账户</button>
                            }
                        }
                    </td>
                </tr>
                            }
        </tbody>
        <tr id="trNull" hidden="hidden">
            <td colspan="4" align="center"><div class="NoData"><span class="cBlack"> <img src="/Areas/Admin/Content/Images/ico_NoDate.gif" width="16" height="16" /> 抱歉！目前数据库暂无数据。</span></div></td>
        </tr>
    </table>
</div>
